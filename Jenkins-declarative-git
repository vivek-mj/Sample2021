pipeline {
    agent any
    environment {
        user = 'vvk'
    }
    stages {
        stage('SCM') {
            steps {
                git credentialsId: 'git-vvk', url: 'https://github.com/vivek-mj/Sample2021.git'
            }
        }
        stage('Build') {
            environment {
                app = 'calculator'
            }
            steps {
                echo "Building the code"
                echo "the app is ${app}"
                echo "User is ${user}"
            }
        }
        stage('Deploy') {
            steps {
                echo "Deploying the code"
                echo "User is ${user}"
                
            }
        }
    }
}
